<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".User.VeifyAcc">
    <TextView
        android:textSize="21dp"
        android:gravity="center"
        android:text="Upload your national id and video for verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="21dp"
            android:text="Front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:src="@drawable/idfront"
            android:id="@+id/image_id_front"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
        <TextView
            android:textSize="21dp"
            android:gravity="center"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:src="@drawable/back"
            android:id="@+id/image_id_back"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

    </LinearLayout>

    <Button
        android:background="@drawable/card_bg"
        android:layout_margin="13dp"
        android:textColor="@color/white"
        android:id="@+id/passport_id"
        android:text="Upload ID/passport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_margin="13dp"
        android:textColor="@color/white"
        android:background="@drawable/card_bg"
        android:id="@+id/video_id"
        android:text="Take video with id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>