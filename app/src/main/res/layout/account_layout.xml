<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

android:padding="21dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="10dp"

                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_marginStart="40dp"
                android:layout_height="96dp"
                android:src="@drawable/accicon"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/lblue"/>

            <ImageView


                android:layout_marginTop="34dp"

                android:id="@+id/edit_prof"
                android:layout_width="45dp"
                android:layout_height="23dp"
                android:src="@drawable/edit"



                />
        </LinearLayout>
            <TextView
                android:id="@+id/username_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="verified"
                android:textSize="21sp"


                />

            <TextView
                android:padding="3dp"
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="verified"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:background="@drawable/card_bg"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/verify_accoutid"

        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify your account"
        android:textSize="21dp"


        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_margin="9dp"
                android:textSize="21dp"
                android:text="Upload your documents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"


                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_margin="9dp"
                android:textSize="21dp"
                android:text="Personal details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"


                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/id_logout"

        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="21dp"


        />
    <TextView

        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="license Terms  and policies"
        android:textSize="21dp"


        />
    <TextView

        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blupay 2023"
        android:textSize="21dp"


        />


</LinearLayout>